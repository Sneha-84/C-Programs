#include <stdio.h>

int main()
{
    int n,stars,spaces;
    printf("Enter the number of rows:");
    scanf("%d",&n);
    stars=n-1;
    spaces=n;
    for(int i=1;i<=n;i++){
    for(int j=1;j<=stars;j++){
        printf("*");
    }
    for(int j=1;j<=spaces;j++){
    printf(" ");
    }
    stars--;
    spaces++;
    printf("\n");
   }
   return 0;
}
